<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context="com.example.eduardopalacios.myapp.FragmentGastos">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/text_titulo"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="consejos para el ahorro"
                    android:textColor="#E42D40"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>


                <!-- A CardView that contains a TextView -->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    card_view:cardBackgroundColor="#C8E5E3"
                    android:layout_width="327dp"
                    android:layout_height="181dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_consejo1"
                            android:layout_width="163dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center_vertical"
                            android:text="NO HAGAS USO EXCESIVO DE TARJETAS"
                            android:textColor="#142b3b"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="167dp"
                        android:layout_height="149dp"
                        app:srcCompat="@drawable/credit_cards_256" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_width="327dp"
                android:layout_marginTop="10dp"
                android:layout_height="181dp"
                card_view:cardBackgroundColor="#A3D5D1"
                card_view:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="164dp"
                        android:id="@+id/text_consejo2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="¿REALMENTE NECESITAS ESA COMPRA?:"
                        android:textColor="#142b3b"
                        android:textSize="15sp"
                        />

                    <ImageButton
                        android:id="@+id/imageButton15"
                        android:layout_width="258dp"
                        android:layout_height="155dp"
                        app:srcCompat="@drawable/gastos" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_gravity="center"
                android:layout_width="327dp"
                android:layout_marginTop="10dp"
                android:layout_height="181dp"
                card_view:cardBackgroundColor="#80C9C6"
                card_view:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/text_consejo3"
                        android:text="SÉ COMPROMETIDO CON TU META DE AHORRO:"
                        android:textColor="#142b3b"
                        android:textSize="15sp"
                         />

                    <ImageButton
                        android:id="@+id/imageButton11"
                        android:layout_width="101dp"
                        android:layout_height="99dp"
                        android:layout_weight="0.13"
                        app:srcCompat="@drawable/pesos" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_width="327dp"
                android:layout_marginTop="10dp"
                android:layout_height="181dp"
                card_view:cardBackgroundColor="#44B4C4"
                card_view:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.09"
                        android:id="@+id/text_consejo4"
                        android:text="SIEMPRE ESTÁS A TIEMPO DE AHORRAR:"
                        android:textColor="#142b3b"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        app:srcCompat="@drawable/descarga" />
                </LinearLayout>


            </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">




            </LinearLayout>




        </LinearLayout>


    </ScrollView>


</FrameLayout>
